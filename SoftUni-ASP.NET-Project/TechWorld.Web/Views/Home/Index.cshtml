@model IEnumerable<TechWorld.Web.ViewModels.LatestGamesCardViewModel>

@{
    ViewData["Title"] = "Home";
}

<section class="text-center text-white py-5" style="background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);">
    <div class="container py-5">
        <h1 class="display-3 fw-bold mb-3">Welcome to <span class="text-warning">TechWorld</span></h1>
        <p class="lead mb-4">Discover your next favorite video game!</p>
        <a href="/Games" class="btn btn-light btn-lg me-2 shadow-sm">Browse Games</a>
    </div>
</section>

<section class="container py-5">
    <h2 class="text-center mb-5 fw-semibold">🔥 Latest Games</h2>
    <div class="row g-4">
        @foreach (var game in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@game.Title</h5>
                        <p class="card-text text-muted">
                            @(game.Description.Length > 90 ? game.Description.Substring(0, 90) + "..." : game.Description)
                        </p>
                        <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id"
                           class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
