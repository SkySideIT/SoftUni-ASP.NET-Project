@model GameDetailsViewModel

<h2 class="text-danger mb-4">Are you sure you want to delete this game?</h2>

<div class="card shadow-sm p-3">
    <div class="row g-3 align-items-center ms-auto">
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Title"
                 class="img-fluid rounded shadow-sm"
                 style="max-height: 300px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <h3 class="fw-bold">@Model.Title</h3>
            <p class="text-muted">@Model.Description</p>

            <ul class="list-unstyled">
                <li><strong>Genre:</strong> @Model.Genre</li>
                <li><strong>Platform:</strong> @Model.Platform</li>
                <li><strong>Publisher:</strong> @Model.Publisher</li>
                <li><strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</li>
                <li><strong>Price:</strong> $@Model.Price</li>
            </ul>
        </div>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>